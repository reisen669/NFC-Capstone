<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageTextWelcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/home1">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/textViewWord"
         android:text="@string/homePageWord"
         app:fontFamily="serif-monospace"
         android:textStyle="bold"
         android:textSize="24sp"
         android:textAlignment="center"
         android:textColor="@color/colorWhite"
         android:layout_marginTop="100dp"
         android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/tcmImage"
        android:layout_width="106dp"
        android:layout_height="139dp"
        android:layout_below="@+id/textViewWord"
        android:scaleType="fitCenter"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/tcm_icon3" />

    <ImageView
        android:id="@+id/pregnant"
        android:layout_width="106dp"
        android:layout_height="139dp"
        android:layout_below="@+id/textViewWord"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edited_pregnant" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewContent"
        android:text="@string/homePageBrief"
        app:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/colorGrey"
        android:layout_below="@+id/pregnant"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>